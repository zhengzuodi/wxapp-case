<view class="section hero small">
  <video 
    src="{{entity.video}}">
    poster="{{entity.image}}"
    objectFit="{{cover}}"
    duration="{{duration_raw}}"
    controls="{{true}}"
  </video>
  <view class="content centered">
    <view class="header">
      {{entity.header}}
      <view class="sub-header">
        {{entity.original}}
      </view>
    </view>
    <view class="description">{{entity.description}}</view>
  </view>
</view>